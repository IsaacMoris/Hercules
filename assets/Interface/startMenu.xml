<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://
www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://niftygui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
 <!-- include the style file for the standard controls -->
<useStyles filename="nifty-default-styles.xml" />
<!-- include the standard controls -->
<useControls filename="nifty-default-controls.xml" />


 <screen id="start" controller="mygame.mainMenuScreen">
     <layer childLayout="center">
         <image filename="Textures/startMenuImage2.jpg" width="100%" height="100%" visibleToMouse="true" > 
             <effect>
                <onStartScreen name="fade" length="3000"/>
            </effect>
         </image>
     </layer>
     
    
     <layer childLayout="center">
         
            <panel childLayout="vertical" height="40%">
            </panel>
            
            
            
            <panel id="soundPanel" childLayout="vertical" align="left" valign="bottom" height="35%" visible="false">
                <panel childLayout="horizontal">
                    <control  name="label"  text="Sound" font="Interface/Fonts/ComicSansMS.fnt"  align="right" margin="5%"/>
                    <control id="soundSlider" name="horizontalSlider" width="40%" align="center" margin="5%"/>               
                </panel>
                <panel childLayout="center" margin="25%"> 
                        <control id="btnBack" name="button" width="200px" height="50px" />
                        <control id="" name="label"  text="Back" font="Interface/Fonts/ComicSansMS.fnt"  />
                    </panel>
            </panel>
            
            <panel id="mainMenuPanel" childLayout="vertical" align="left" valign="bottom" height="50%">
                   <panel childLayout="center" margin="5px"> 
                        <control id="btnStart" name="button" width="250px" height="50px" margin="0px,0px,3%, 10%" />
                        <control id="" name="label"  text="Start" font="Interface/Fonts/ComicSansMS.fnt"  margin="0px,0px,0%, 10%" />
                    </panel>
                
                    <panel childLayout="center" margin="5px"> 
                        <control id="btnOptions" name="button" width="250px" height="50px" margin="0px,0px,3%, 10%" />
                        <control  name="label"  text="Options" font="Interface/Fonts/ComicSansMS.fnt"  margin="0px,0px,0%, 10%"/>
                    </panel>
                
                    <panel childLayout="center" margin="5px">
                        <control id="btnScore" name="button" width="250px" height="50px" margin="0px,0px,3%, 10%" />
                        <control name="label"  text="Score" font="Interface/Fonts/ComicSansMS.fnt"  margin="0px,0px,0%, 10%"/>
                    </panel>
                      
                    <panel childLayout="center" margin="5px">
                        <control id="btnExit" name="button" width="250px" height="50px" margin="0px,0px,3%, 10%" visibleToMouse="true"/>
                        <control  name="label"  text="Exit" font="Interface/Fonts/ComicSansMS.fnt"  margin="0px,0px,0%, 10%"/>
                    </panel>
            </panel>
            
            <panel childLayout="center" align="right" width="15%" valign="bottom" >
                <image id="speakerON"filename="Textures/speakerON.png" width="125px"height="80px" visibleToMouse="true" align="left"/>
                <image id="speakerOFF"filename="Textures/speakerOFF.png" width="100px"height="70px" visibleToMouse="true" visible="false" align="left"/>
            </panel>
            
     </layer>
 
 </screen>
</nifty>